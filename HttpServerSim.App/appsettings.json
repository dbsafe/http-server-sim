{
  // If workingDirectory in launchSettings.json is set to a different directory the application will use the configuration from that directory instead of this config file
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
      "HttpServerSim": "Debug"
    }
  },
  "AllowedHosts": "*",
  "HttpServerSim": {
    "RulesPath": "rules.json",
    "ResponseFilesFolder": "ResponseFiles",
    "Url": "http://*:8080",
    "ControlUrl": "http://*:8090",
    "LogControlRequestAndResponse": true,
    "LogRequestAndResponse": true
  }
}
